{
  "manifest_version": 3,
  "name": "Snap: Prompting Helper",
  "version": "1.0.0",
  "description": "Assess your prompting! Get real-time context engineering advice--tell the models everything they should know :D",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.tsx"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon-small-display.png",
      "48": "icons/icon-small-display.png",
      "128": "icons/icon-small-display.png"
    }
  },
  "icons": {
    "16": "icons/icon-small-display.png",
    "48": "icons/icon-small-display.png",
    "128": "icons/icon-small-display.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/icon16-dark.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
